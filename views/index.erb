<header>
  <h2>INDICES</h2>
</header>

<ul>
  <% @files.each do |file| %>
    <li>
      <a href="/<%= file %>"><%= file %></a>
      <a href="/<%= file %>/edit">edit</a>
      <form class="inline" method="post" action="/<%= file %>/delete">
        <button type="submit">delete</button>
      </form>
    </li>
  <% end %>
</ul>

<p>
  <a href="/new_doc">New Document</a>
</p>

<p class="user-status">
  <% if session[:username] %>
    <form method="post" action="/sign_out">
      <label for="sign_out">Signed in as <%= session[:username] %>.</label>
      <button type="submit">Sign Out</button>
    </form>
  <% else %>
    <a href="/sign_in">Sign In</a>
  <% end %>
</p>
